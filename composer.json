{
    "name": "furkankadioglu/laravel-comments",
    "description": "Add comments to your Laravel application",
    "keywords": [
        "beyondcode",
        "comments",
        "laravel-comments"
    ],
    "homepage": "https://github.com/furkankadioglu/laravel-comments",
    "license": "MIT",
    "authors": [
        {
            "name": "Marcel Pociot",
            "email": "marcel@beyondco.de",
            "homepage": "https://beyondcode.de",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "7.0",
        "illuminate/support": "5.5.*"
    },
    "require-dev": {
        "orchestra/testbench": "^3.6",
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "BeyondCode\\Comments\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BeyondCode\\Comments\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "BeyondCode\\Comments\\CommentsServiceProvider"
            ]
        }
    }
}
